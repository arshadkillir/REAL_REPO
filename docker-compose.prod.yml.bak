version: "3.9"

services:
  posall-db:
    image: postgres:15-alpine
    environment:
      POSTGRES_USER: pos
      POSTGRES_PASSWORD: yourpassword
      POSTGRES_DB: posdb
    volumes:
      - db_data:/var/lib/postgresql/data
    networks:
      - pos-all_webnet
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U pos -d posdb"]
      interval: 10s
      timeout: 5s
      retries: 5

  backend:
    build: ./backend
    env_file: ./backend/.env
    restart: unless-stopped
    ports:
      - "4000:4000"
    depends_on:
      - posall-db
    volumes:
      - ./backend:/app
    command: sh -c "npm run migrate && npm run seed && npm run start"

  frontend:
    build: ./frontend
    env_file: ./frontend/.env
    restart: unless-stopped
    volumes:
      - ./frontend:/usr/share/nginx/html:ro
    depends_on:
      - backend

  nginx:
    image: nginx:1.28
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    depends_on:
      - backend
      - frontend
    networks:
      - pos-all_webnet
    volumes:
      - ./nginx/default.conf.validated:/etc/nginx/conf.d/default.conf:ro
      - ./frontend:/usr/share/nginx/html:ro

volumes:
  db_data:

networks:
  pos-all_webnet:
    external: true
