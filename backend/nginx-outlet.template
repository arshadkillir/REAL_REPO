server {
  listen 80;
  server_name {{slug}}.yourdomain.com;

  location / {
    root /var/www/{{slug}};
    index index.html;
  }

  location /assets/ {
    alias /var/www/{{slug}}/assets/;
  }

  location /theme.css {
    alias /var/www/{{slug}}/themes/{{theme}}.css;
  }

  error_page 403 /fallback.html;
}
location /health {
  proxy_pass http://localhost:4000/api/health;
}
